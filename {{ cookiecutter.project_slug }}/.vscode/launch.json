{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: FastAPI",
      "type": "python",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "app.main:app",
        "--port",
        "8080",
        "--reload",
        "--reload-dir",
        "app"
      ],
      "env": {
        // This avoids the console logs being spammed with error messages because ddtrace
        // can't connect to a local instance of the datadog agent. If you're running dd-agent
        // on your laptop and want to test datadog integration, change this to True.
        "DD_TRACE_ENABLED": "False"
      },
      "jinja": true,
      "justMyCode": false
    }
  ]
}